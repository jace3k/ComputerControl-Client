                        android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" android:fontFamily="@font/muli" android:textColor="@color/text_black" />
                    <TextView android:text="0MB" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/textView26" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" android:fontFamily="@font/muli" android:textColor="@color/text_black" />
                    <TextView android:text="Pamięć" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/textView123" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp" android:textSize="18sp" android:textStyle="bold"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="200dp"
                android:layout_weight="1" app:cardElevation="10dp" android:layout_margin="10dp"
                android:id="@+id/battery">
                <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">

                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/text_battery_percent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/progress_battery" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" />
                    <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/progress_battery" android:max="100"
                        android:progress="0" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp" app:layout_constraintEnd_toStartOf="@+id/textView30"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView29"
                        android:layout_marginStart="8dp" />
                    <TextView android:text="100%" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/textView30" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black" />
                    <TextView android:text="0%" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/textView29" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" />
                    <TextView android:text="Bateria" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/textView124233" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:textSize="18sp"
                        android:textStyle="bold" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" />
                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/text_battery_time_left"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView124233"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="200dp"
                android:layout_weight="1" app:cardElevation="10dp" android:layout_margin="10dp" android:id="@+id/disk">
                <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView android:text="Dysk" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView11"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:textSize="18sp"
                        android:textStyle="bold" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" />
                    <android.support.v4.widget.NestedScrollView android:layout_width="348dp"
                        android:layout_height="150dp" android:fillViewport="true"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView11">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="vertical" android:id="@+id/disk_view" />
                    </android.support.v4.widget.NestedScrollView>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
