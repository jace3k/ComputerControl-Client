                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginTop="16dp"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black" android:textSize="18sp" />
                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/text_uptime" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_system"
                        android:textStyle="bold" android:fontFamily="@font/muli" android:textColor="@color/text_black"
                        app:layout_constraintStart_toEndOf="@+id/textView13" android:layout_marginStart="8dp" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="200dp"
                android:layout_weight="1" app:cardElevation="10dp" android:layout_margin="10dp"
                android:id="@+id/processor">
                <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">

                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/text_core_count_logical" android:textStyle="bold"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black"
                        app:layout_constraintStart_toEndOf="@+id/textView17" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_core_count" />
                    <TextView android:text="Liczba rdzeni logicznych:" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView17"
                        app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView15" />
                    <TextView android:text="Liczba rdzeni fizycznych:" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView15"
                        app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/muli" android:textColor="@color/text_black"
