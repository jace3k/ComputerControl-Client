                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_uptime" />
                    <TextView android:text="Architektura:" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView18"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView13" />
                    <TextView android:text="Czas działania:" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/text_system"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black" />
                    <TextView android:text="System" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        android:textSize="18sp" android:textStyle="bold" android:fontFamily="@font/muli"
