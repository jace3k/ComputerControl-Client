                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/text_core_count" android:textStyle="bold"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black"
                        app:layout_constraintStart_toEndOf="@+id/textView15" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_processor_name" />
                    <TextView android:text="Procesor" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/dsad" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:textSize="18sp"
                        android:textStyle="bold" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" />
                    <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/progress_processor" android:max="100"
                        android:progress="0" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toEndOf="@+id/textView20" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView21" android:layout_marginEnd="8dp" />
                    <TextView android:text="0%" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/textView20" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" />
                    <TextView android:text="100%" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/textView21" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black" />
                    <TextView android:text="Ładowanie.." android:layout_width="0dp" android:layout_height="wrap_content"
                        android:id="@+id/text_processor_name" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/dsad" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" android:maxLines="2" android:textSize="18sp" />
                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/text_current_freq"
                        app:layout_constraintBottom_toTopOf="@+id/progress_processor" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textStyle="bold" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="200dp"
                android:layout_weight="1" app:cardElevation="10dp" android:layout_margin="10dp"
                android:id="@+id/memory">
                <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">

                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/text_memory_free" android:textStyle="bold"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_memory_full"
                        app:layout_constraintStart_toEndOf="@+id/textView23" android:layout_marginStart="8dp" />
                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/text_memory_full"
                        android:textStyle="bold" android:fontFamily="@font/muli" android:textColor="@color/text_black"
                        app:layout_constraintStart_toEndOf="@+id/textView22" android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView123" />
                    <TextView android:text="Pamięć wolna:" android:layout_width="wrap_content"
                        android:layout_height="17dp" android:id="@+id/textView23"
                        app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView22" android:layout_marginTop="8dp" />
                    <TextView android:text="Pamięć całkowita:" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView22"
                        app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/muli"
                        android:textColor="@color/text_black" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView123" android:layout_marginTop="16dp" />
                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/text_memory_used" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textStyle="bold" app:layout_constraintBottom_toTopOf="@+id/progress_memory"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black" />
                    <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/progress_memory" android:max="100"
                        android:progress="0" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp" app:layout_constraintEnd_toStartOf="@+id/text_memory_max"
