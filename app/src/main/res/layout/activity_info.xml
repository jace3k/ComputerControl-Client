                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_architecture" />
                    <TextView android:text="Wersja:" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView19"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView18" />
                    <TextView android:text="Ładowanie.." android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/text_architecture" android:textStyle="bold"
                        android:fontFamily="@font/muli" android:textColor="@color/text_black"
