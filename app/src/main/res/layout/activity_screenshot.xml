<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="pl.jacekpiszczek.androidapp.activities.additional.ScreenshotActivity">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_weight="1" app:cardCornerRadius="10dp" app:contentPadding="0dp" app:cardElevation="6dp"
            android:layout_margin="10dp">
            <HorizontalScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/scroll_screenshot" android:layout_weight="1" android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"></HorizontalScrollView>
        </android.support.v7.widget.CardView>
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="6" android:background="@color/colorPrimary">

            <TextView android:text="Screenshot komputera" android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/textView8" android:textColor="@color/text" android:textSize="24sp"
                android:fontFamily="@font/muli" />
            <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" android:id="@+id/progress_screenshot"
                app:layout_constraintBottom_toBottomOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
