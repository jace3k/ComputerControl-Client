<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="pl.jacekpiszczek.androidapp.activities.MoreActivity">

    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="0dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
            <Button android:text="Otwórz CD-ROM" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_open_cd"
                style="@style/Widget.AppCompat.Button.Borderless.Colored" android:layout_weight="1"
                android:layout_margin="0dp" android:padding="0dp" android:onClick="onOpenCDROMClick"
                android:fontFamily="@font/muli" />
            <Button android:text="Screenshot" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/button_screenshoot" style="@style/Widget.AppCompat.Button.Colored"
                android:layout_weight="1" android:layout_margin="0dp" android:padding="0dp"
                android:onClick="onScreenshotClick" android:fontFamily="@font/muli" />
            <Button android:text="Keylogger" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/button_keylogger" style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_weight="1" android:layout_margin="0dp" android:padding="0dp"
                android:onClick="onKeyloggerCLick" android:fontFamily="@font/muli" />
            <Button android:text="Wyświetl komunikat" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_message_box"
                style="@style/Widget.AppCompat.Button.Colored" android:layout_weight="1" android:layout_margin="0dp"
                android:padding="0dp" android:onClick="onCommunicateClick" android:fontFamily="@font/muli" />
            <Button android:text="Otwórz przeglądarkę" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_open_browser"
                style="@style/Widget.AppCompat.Button.Borderless.Colored" android:layout_weight="1"
                android:layout_margin="0dp" android:padding="0dp" android:onClick="onBrowserClick"
                android:fontFamily="@font/muli" />
            <Button android:text="Synteza mowy" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/button_speech" style="@style/Widget.AppCompat.Button.Colored" android:layout_weight="1"
                android:layout_margin="0dp" android:padding="0dp" android:onClick="onSayClick"
                android:fontFamily="@font/muli" />
        </LinearLayout>
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="4" android:background="@color/colorPrimary">

            <TextView android:text="Dodatki" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/textView10" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textColor="@color/text" android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" android:fontFamily="@font/muli" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
